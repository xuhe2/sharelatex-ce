---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "集成完整 TeX Live 的 Overleaf 私有化部署解决方案 - 一键 Docker 部署，支持老旧 CPU，完全开源"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/sharelatex-ce/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://xuhe2.github.io/sharelatex-ce/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://xuhe2.github.io/sharelatex-ce/og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://xuhe2.github.io/sharelatex-ce/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://xuhe2.github.io/sharelatex-ce/og-image.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,400;0,700;1,400&family=Inter:wght@400;500;600;700&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 font-sans antialiased">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --latex-blue: #003366;
    --latex-dark: #002244;
    --latex-light: #004488;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Inter', system-ui, sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Noto Serif', 'Times New Roman', serif;
  }

  code, pre {
    font-family: 'Fira Code', monospace;
  }
</style>
